<div class="container-fluid page-container">
  <div class="row justify-content-center page-row">
    <div class="col-md-3"></br>
      <h2>"{{artworks.title}}"</h2></br>
        <div class="card mb-2 shadow-sm p-3 mb-5 bg-white rounded">
          <img src="{{artworks.url}}" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{artworks.title}}</h5>
            <p>By <a class="card-text" href="/artist-portfolio/{{artworks.artistID}}">{{artworks.artistName}}</a></p>
            <p class="card-text">Medium: {{artworks.medium}}</p>
            <p class="card-text">Materials: {{artworks.material}}</p>
            <p class="card-text">Description: {{artworks.description}}</p>
        </div>
      </div>
    </div>
    <div class="col-md-8 table-column"></br></br>
      <div class="card mb-4 shadow-sm p-3 mb-5 bg-white rounded">
        <div class="card-body">
          <div class="table-responsive" id="eventsTable">
            <table class="table">
              <div class="mx-auto" style="width: 200px;"><h4>Events</h4></div>
                <thead class="thead">
                    <tr>
                      <th scope="col"></th>
                      <th scope="col">Name</th>
                      <th scope="col">Start</th>
                      <th scope="col">End</th>
                      <th scope="col">Time</th>
                      <th scope="col">Location</th>
                      <th scope="col">City</th>
                      <th scope="col">State</th>
                      <th scope="col">Zip Code</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each artworksEvents}}
                    <tr>
                      <td>
                        <form id="add_user_events" action="/image-user/:{{id}}" method="POST" enctype="application/x-www-form-urlencoded">
                          <input id="eventID" name="eventID" type="hidden" value="{{eventID}}">
                          <input id="artworkID" name="artworkID" type="hidden" value="{{id}}">
                          <input id="insert_user_event" type="submit" value="Attend" class="btn btn-primary">
                        </form>
                      </td>
                      <td>{{name}}</td>
                      <td>{{startDate}}</td>
                      <td>{{endDate}}</td>
                      <td>{{time}}</td>
                      <td>{{location}}</td>
                      <td>{{city}}</td>
                      <td>{{state}}</td>
                      <td>{{zipCode}}</td>
                    </tr>
                    {{/each}}
                  </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


  
    