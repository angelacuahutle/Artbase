<div class="container-fluid page-container">
  <div class="row justify-content-center page-row">
    <div class="col-md-8"></br>
      <h2>{{user.username}}'s Events</h2></br>

      <div class="table-responsive" id="eventsTable">
        <table class="table">
          <thead class="thead">
              <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col">Start</th>
                <th scope="col">End</th>
                <th scope="col">Time</th>
                <th scope="col">Location</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Zip Code</th>
              </tr>
            </thead>
            <tbody>
              {{#each userEvents}}
              {{#if name}}
              <tr>
                <td><button class="btn btn-primary" onclick="deleteUserEvent({{id}})">Remove</button></td>
                <td>{{name}}</td>
                <td>{{startDate}}</td>
                <td>{{endDate}}</td>
                <td>{{time}}</td>
                <td>{{location}}</td>
                <td>{{city}}</td>
                <td>{{state}}</td>
                <td>{{zipCode}}</td>
              </tr>
              {{/if}}
              {{/each}}
            </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
