<div class="container-fluid page-container">
  	<div class="row justify-content-center page-row">
    	<div class="col-md-8"></br>
			<h1>Editing {{Events.name}}</h1>	
			<form id="update-event" action="/events" method="post">
			  	<div class="form-row">
			    	<div class="form-group col-md-5">
			      		<label for="name">Name</label>
			      		<input id="name" class="form-control" type="text" name="name" value="{{Events.name}}">
			    	</div>
			    	<div class="form-group col-md-2">
			      		<label for="startDate">Start</label>
			      		<input id="startDate" class="form-control" type="date" name="startDate" value="{{Events.startDate}}">
			    	</div>
			    	<div class="form-group col-md-2">
			      		<label for="endDate">End</label>
			     		<input id="endDate" class="form-control" type="date" name="endDate" value="{{Events.endDate}}">
			    	</div>
			    	<div class="form-group col-md-3">
			      		<label for="time">Time</label>
			      		<input id="time" class="form-control" type="time" name="time" value="{{Events.time}}">
			    	</div>
			  	</div>
			  	<div class="form-row">
				  	<div class="form-group col-md-5">
				    	<label for="location">Address</label>
				    	<input id="location" class="form-control" type="text" name="location" value="{{Events.location}}">
				  	</div>
				  	<div class="form-group col-md-2">
				    	<label for="city">City</label>
				    	<input id="city" class="form-control" type="text" name="city" value="{{Events.city}}">
				  	</div>
					<div class="form-group col-md-2">
				    	<label for="state">State</label>
				    	<input id="state" class="form-control" type="text" name="state" value="{{Events.state}}">
				  	</div>
				  	<div class="form-group col-md-3">
				    	<label for="zipCode">Zip Code</label>
				    	<input id="zipCode" class="form-control" type="text" name="zipCode" value="{{Events.zipCode}}">
				  	</div>
				</div>
				
			</form>
			<div class="form-inLine">
				<button onclick="updateEvent({{Events.eventID}})" form="update-event" class="btn btn-primary">Update</button>
				<!--form="update-event" -->
			</div>
		</div>
	</div>
</div>



