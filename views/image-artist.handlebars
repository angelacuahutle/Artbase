<div class="container-fluid page-container">
  <div class="row justify-content-center page-row">
    <div class="col-md-3"></br>
      <h2>"{{thisArtworkAndArtist.title}}"</h2></br>
        <div class="card mb-2 shadow-sm p-3 mb-5 bg-white rounded">
          <img src="{{thisArtworkAndArtist.url}}" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{thisArtworkAndArtist.title}}</h5>
            <p>By <a class="card-text" href="/artist-portfolio/{{thisArtworkAndArtist.artistID}}">{{thisArtworkAndArtist.artistName}}</a></p>
            <p class="card-text">Medium: {{thisArtworkAndArtist.medium}}</p>
            <p class="card-text">Materials: {{thisArtworkAndArtist.material}}</p>
            <p class="card-text">Description: {{thisArtworkAndArtist.description}}</p>
          </div>
        </div>
      </div>
      <div class="col-md-8 table-column"></br></br>
        <div class="card mb-4 shadow-sm p-3 mb-5 bg-white rounded">
          <div class="card-body">
            <div class="table-responsive" id="eventsTable">
              <table class="table">
                <div class="mx-auto" style="width: 200px;"><h4>Events</h4></div>
                  <thead class="thead">
                      <tr>
                          <th scope="col"></th>
                          <th scope="col">Name</th>
                          <th scope="col">Start</th>
                          <th scope="col">End</th>
                          <th scope="col">Time</th>
                          <th scope="col">Location</th>
                          <th scope="col">City</th>
                          <th scope="col">State</th>
                          <th scope="col">Zip Code</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each thisEvents}}
                        <tr>
                            <td><button type="button" class="btn btn-primary">Remove</button></td>
                            <td>{{this.name}}</td>
                            <td>{{this.startDate}}</td>
                            <td>{{this.endDate}}</td>
                            <td>{{this.time}}</td>
                            <td>{{this.location}}</td>
                            <td>{{this.city}}</td>
                            <td>{{this.state}}</td>
                            <td>{{this.zipCode}}</td>
                        </tr>
                      {{/each}}
                    </tbody>
              </table>
            </div>
            <div id="accordion">
              <div class="card">
                <div class="card-header" id="headingOne">
                  <h5 class="mb-0">
                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                      Add an event
                    </button>
                  </h5>
                </div>

                <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                  <div class="card-body">
                    <form id="add_artwork_events" action="/image-artist/:{{thisArtworkAndArtist.artistID}}" method="POST" enctype="application/x-www-form-urlencoded">
                      <div class="form-group row">
                        <label for="eventsSelect" class="col-sm-2 col-form-label">Select an event:</label>
                        <div class="col-sm-10">
                          <select class="form-control" id="eventsSelect" name="eventSelected" required>
                            {{#each Events}}
                            <option value="{{eventID}}">{{name}}</option>
                            {{/each}}
                          </select>
                        </div>
                      </div>
                    <input id="artwork-event-artistUsername" name="artistUsername" type="hidden" value="{{thisArtworkAndArtist.username}}">
                    <input id="artwork-event-artworkURL" name="artworkURL" type="hidden" value="{{thisArtworkAndArtist.url}}">
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                          <button id="/events" type="button" class="btn btn-link" onClick="location.href = '/events';">Create new event</button>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                          <input id="insert_artwork_event" type="submit" value="Submit" class="btn btn-primary">
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>